<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <!-- Create the 'password_reset_link' table -->
    <changeSet id="create-password_reset_link-table" author="egenov">
        <comment>Create the table PasswordResetLink</comment>
        <createTable tableName="password_reset_link">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Auditing columns -->
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="create_password_reset_link_sequence_generator" author="egenov">
        <createSequence sequenceName="password_reset_link_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>

    <!-- Add foreign key constraint -->

</databaseChangeLog>
