<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <!-- Create the 'verification_code' table -->
    <changeSet id="create-budget-table" author="egenov">
        <createTable tableName="budget">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="budget" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Auditing columns -->
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="create_budget_sequence_generator" author="egenov">
        <createSequence sequenceName="budget_sequence_generator"
                        startValue="1000"
                        incrementBy="1"/>
    </changeSet>

    <!-- Add foreign key constraint -->

    <changeSet id="add-foreign-key-user" author="egenov">
        <addForeignKeyConstraint
                baseTableName="budget"
                baseColumnNames="user_id"
                constraintName="fk_budget_user"
                referencedTableName="user"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>
